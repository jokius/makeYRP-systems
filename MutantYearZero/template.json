{
  "status": "alpha",
  "version": "0.0.2",
  "identifier": "$identifier",
  "name": "Mutant: Year Zero",
  "img": "/MutantYearZero/logo.jpg",
  "description": "$description",
  "template": {
    "initiative": {
      "dices": "d6",
      "formula": "@i1.total > @i2.total ? 1 : (@i1.total == @i2.total ? 0 : -1)"
    },
    "dices": [
      {
        "key": "attribute",
        "dice": "d6",
        "name": "$attribute",
        "style": {
          "background-color": "yellow",
          "border": "1px solid white",
          "color": "black"
        },
        "faces": {
          "1": {
            "images": [
              "/MutantYearZero/dices/bio_b.png"
            ],
            "icons": [
              "mdi-biohazard"
            ]
          },
          "6": {
            "images": [
              "/MutantYearZero/dices/rad_b.png"
            ],
            "icons": [
              "mdi-radioactive"
            ]
          }
        }
      },
      {
        "key": "skill",
        "dice": "d6",
        "name": "$skill",
        "style": {
          "background-color": "green",
          "border": "1px solid white",
          "color": "white"
        },
        "faces": {
          "6": {
            "images": [
              "/MutantYearZero/dices/rad_w.png"
            ]
          }
        }
      },
      {
        "key": "gear",
        "dice": "d6",
        "name": "$gear",
        "style": {
          "background-color": "black",
          "border": "1px solid white",
          "color": "white"
        },
        "faces": {
          "1": {
            "images": [
              "/MutantYearZero/dices/explosion.png"
            ]
          },
          "6": {
            "images": [
              "/MutantYearZero/dices/rad_w.png"
            ],
            "icons": [
              "mdi-radioactive"
            ]
          }
        }
      }
    ],
    "sheets": {
      "mutant": {
        "img": {},
        "token": {},
        "name": "$mutant",
        "armor": [],
        "conditions": "$conditions",
        "counters": "$counters",
        "critical_injuries": [],
        "gear": [],
        "info": {
          "description": "",
          "role": "@random",
          "face": "",
          "body": "",
          "clothing:": "",
          "den": {
            "description": "",
            "gear_stashed": ""
          },
          "goal": "",
          "notes": ""
        },
        "misfires": [],
        "mutations": [
          "@random"
        ],
        "relationships": [
          {
            "who": "",
            "attitude": ""
          }
        ],
        "skills": "$skills",
        "stats": "$stats",
        "talents": [],
        "weapons": []
      },
      "npc": {
        "img": {},
        "token": {},
        "name": "$npc",
        "armor": [],
        "conditions": "$conditions",
        "counters": "$counters",
        "critical_injuries": [],
        "gear": [],
        "info": {
          "description": "",
          "role": "@random",
          "face": "",
          "body": "",
          "clothing:": "",
          "den": {
            "description": "",
            "gear_stashed": ""
          },
          "goal": ""
        },
        "misfires": [],
        "mutations": [
          "@random"
        ],
        "relationships": [
          {
            "who": "",
            "attitude": ""
          }
        ],
        "skills": "$skills",
        "stats": "$stats",
        "talents": [],
