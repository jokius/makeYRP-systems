      "arc": {
        "img": {},
        "name": "$arc",
        "info": {
          "type": "",
          "description": "",
          "coordinates": "A0",
          "water_source": "",
          "season": ""
        },
        "players": 1,
        "population": 1,
        "stats": "$stats_arc",
        "projects": [],
        "bosses": []
      },
      "social_list": {
        "img": "$social_list_img",
        "name": "$social_list",
        "relationship": [
          {
            "name": "",
            "type": "NPC",
            "status": "",
            "data": "",
            "description": ""
          }
        ]
      }
    },
    "menus": {
      "notes": {
        "icon": "mdi-notebook",
        "name": "Заметки",
        "template": {
          "name": "",
          "description": "",
          "image": {},
          "styles": [
            {
              "name": "$simple_note",
              "style": {},
              "bgStyle": {}
            },
            {
              "name": "$pc_screen",
              "style": {
                "font-family": "\"Lucida Sans Unicode\", \"Lucida Grande\", sans-serif",
